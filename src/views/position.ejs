                                <tr>
                                    <td scope=""><%= data[i].id_pilot %> </td>
                                    <td><%= data[i].name %> </td>
                                    <td><%= data[i].last_name %> </td>
                                </tr>
                                <% } %>
                                    <% } %>
                    </tbody>
                </table>

            </div>
        </div>
    </div>

