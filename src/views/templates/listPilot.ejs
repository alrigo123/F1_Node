<%- include ('../layouts/header.ejs') %>
    <input type="submit" value="ADD PILOT" class="btn btn-primary mt-2">
    <br>
    <br>
    <table class="table table-bordered table-responsive table-dark table-hover">
        <thead class="thead-default thead-light">
            <tr class="text-center">
                <th scope="col">Pos</th>
                <th>Nick</th>
                <th>Name</th>
                <th>Last Name</th>
                <th>Country</th>
                <th>Team</th>
                <th>Points</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for( let i=0; i < data.length; i++ ) { %>
                
                <tr class="text-center">
                    <td class="text-center" scope="row"><%= i+1 %> </td>
                    <td class="text-center"><%= data[i].nick %> </td>
                    <td class="text-center"><%= data[i].name_pilot %> </td>
                    <td class="text-center"><%= data[i].last_name %></td>
                    <td class="text-center"><%= data[i].country_pilot %> </td>
                    <td class="text-center"><%= data[i].name_team %></td>
                    <td class="text-center"><%= data[i].points %></td>
                    <td><a href="" class="btn btn-danger">Delete</a>
                        <a href="" class="btn btn-success">Update</a>
                    </td>
                </tr>

                <% } %>
        </tbody>
    </table>


    <%- include ('../layouts/footer.ejs') %>